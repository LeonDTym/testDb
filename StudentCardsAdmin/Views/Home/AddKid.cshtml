@model StudentCardsAdmin.Models.StudentsView
@{
    Layout = null;
}

@using (Html.BeginForm("SaveKid", "Home", FormMethod.Post, new { id = "AddKidForm" }))
{
        @Html.AntiForgeryToken()

<div class="form-group">
    <div style="margin-top:10px;margin-bottom:10px">
        <div class=" form-inline rowModal">
            <label class="littleLabel">Имя:</label>
            @Html.TextBox("Name", null, new { @class = "form-control form-control-sm", @style = "width = 40%", @required = "required", @validationMessage = "Имя", @maxlength = "64" })
            <label class="littleLabel">&nbsp;Фамилия:</label>
            @Html.TextBox("SureName", null, new { @class = "form-control form-control-sm", @style = "width = 40%", @required = "required", @validationMessage = "Имя", @maxlength = "64" })
        </div>

    </div>
    <div class="form-inline rowModal">
        <label class="littleLabel">Отчество:</label>
        @Html.TextBox("PatronymicName", null, new { @class = "form-control form-control-sm", @style = "width = 40%", @required = "required", @validationMessage = "Имя", @maxlength = "64" })
    </div>
    <hr class="specialHR2" />
    <div style="margin-top:10px;margin-bottom:10px">
        <div class=" form-inline rowModal">
            <label class="labelMy">Дата рождения:</label>
            <input lang="ru" asp-for="YearBirthday" type="text" id="dateBirthday" class="form-control form-control-sm ui-datepicker-calendar" placeholder="дд.мм.гггг" required />
            <button type="button" id="buttonForDateBirth" style="border-style: solid; border-width: thin; border-radius: 0 4px 4px 0; background-color: white; "><img style="width:20px" src="~/svgs/solid/calendar-alt.svg" /> </button>

            <label style="margin-left:20%" class="labelMy">&nbsp;Год окончания:</label>
            <input lang="ru" asp-for="EndTraining" type="text" id="dateEndStading" class="form-control form-control-sm ui-datepicker-calendar" placeholder="мм.гггг" required />
            <button type="button" form="dateEndStading" id="buttonForDateEnd" style="border-style: solid; border-width: thin; border-radius: 0 4px 4px 0; background-color: white; "><img style="width:20px" src="~/svgs/solid/calendar-alt.svg" /> </button>
        </div>

    </div>


    <hr class="specialHR2" />
    <div style="margin-top:10px;margin-bottom:10px">
        <div class=" form-inline rowModal">
            <label class="labelMy">Класс:</label>
            <select>
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
                <option>6</option>
                <option>7</option>
                <option>8</option>
                <option>9</option>
            </select>

            <input hidden />
            <input id="class" size="1" type="text" asp-for="Class" style="text-transform:uppercase" class="form-control form-control-sm" maxlength="1" placeholder="A" required />
        </div>
    </div>

    <hr class="specialHR2" />
    @*<label for="chekTel" class="littleLabel">Оповещение на номер телефона:</label>
        @Html.CheckBox("SendMessegeTel", false, new { @id = "chekTel" })
        <label class="littleLabel">Введите номер:</label>
        <input type="tel" class="form-control-sm">*@
<div style="margin-top:10px;margin-bottom:10px">
    <div class=" form-inline rowModal">
        @Html.CheckBox("SendMessegeTel", false, new { @id = "chekTel" })
        <label for="chekTel" class="littleLabel">Оповещение на номер телефона:</label>

        @*<label style="position:center;margin-left:20%" class="littleLabel">Введите номер:</label>*@
        <input style="margin:12px" asp-for="Telephone" type="tel" class=" tel form-control-sm form-control"
               placeholder='+375(__)___-__-__' required title="Номер телефона"
               pattern='\s{0,}\+{1,1}375\s{0,}\({0,1}(([2]{1}([5]{1}|[9]{1}))|([3]{1}[3]{1})|([4]{1}[4]{1}))\)\s{0,}[0-9]{3,3}\s{0,}-{1,1}[0-9]{2,2}\s{0,}-{1,1}[0-9]{2,2}'>
    </div>
    <div class=" form-inline rowModal">
        @Html.CheckBox("SendMessegeEmail", false, new { @id = "chekEmail"})
        <label for="chekEmail"  class="littleLabel">Оповещение на почту:</label>

        @*<label style="position:center;margin-left:20%" class="littleLabel">Введите почту:</label>*@
        <input style=" margin-left: 12px;" asp-for="Email" type="email" class="form-control-sm form-control"  placeholder = "exemple@gmail.com" >
    </div>
</div>


    @*@Html.TextBox("Telephone", null, new { @class = "form-control form-control-sm", @style = "width = 40%", @required = "required", @validationMessage = "Имя", @maxlength = "64" })*@

   
    <hr class="specialHR2" />
    <label for="isKPEdit" class="littleLabel">Разрешение на обработку персональных данных:</label>
    @Html.CheckBox("ChboxNedCard", false, new { @id = "isKPEdit" })
    @*<input type="checkbox" asp-for="NeedCard" value="0"/>*@
</div>
    <div class="form-group text-right">
        <a class="btn btn-sm btn-outline-dark" type="button" asp-area="" asp-controller="Home" asp-action="Index">Отмена</a>
        <button type="submit" class="btn btn-sm btn-success" id="submitButton">Добавить</button>
    </div>

    }


    <script type="text/javascript">

        //let input = document.querySelector('class');
        //input.addEventListener('input', () => {
        //    input.value = input.value.replace(/[^А-Я]/, '');
        //});
        
        //const validation = (e) => e.target.value = input.replace(/[A-Za-z]/g, '');
        //console.log(validation);
        $('#dateBirthday').datepicker(
            {
               format: 'dd.mm.yyyy',
               /* orientation: "top right",*/
               
               language:'ru',
                startView: 2,
               
                defaultViewDate: {
                    year: 2014
                },
                 autoclose: true
            }
        );
        $('#dateEndStading').datepicker(
            {
                format: 'mm.yyyy',
                orientation: "top right",
                language: 'ru',
                startView: 2,
                minViewMode: 1,
                maxViewMode: 2,
                autoclose: true
               
            } 
           
        );
        $('#buttonForDateBirth').click(function () {
            $("#dateBirthday").focus();
        })
        $('#buttonForDateEnd').click(function () {
            $("#dateEndStading").focus();
        })
       
        $("#submitButton").click(function () {
            
            $("#AddKidForm").submit();
        });

                      
        $(function () {
            $("#Telephone").mask("+375(99)999-99-99");
        });
        /*$('#acClientPhone').val().replace(/[\(\)\-\s]/g, "");*/
    </script>
