@model SCRepository.Entity.Models.UserModels.ChangePasswordModel
@{
    Layout = null;
}

<!DOCTYPE html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Смена пароля</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true">
    <link href="~/css/autorization.css" rel="stylesheet" asp-append-version="true">
</head>

<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-sm-8 col-xs-8 wrapper">
                <form id="LoginFrm" name="LoginFrm" action="@Url.Action("ChangePsw","Autorization")" method="post" data-ajax="true" data-ajax-method="POST" data-ajax-mode="replace" data-ajax-update="#Loginresult">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        <label for="UserName">Имя пользователя</label>
                        @*<input autofocus="" type="text" class="form-control" id="UserName" name="UserName" placeholder="Введите имя пользователя" data-val="true" data-val-required="Введите имя пользователя" value="">*@
                        @Html.EditorFor(x => x.UserName, new { htmlAttributes = new { @class = "form-control", @name = "UserName", @id = "UserName", @placeholder = "Введите личный номер", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.UserName)
                    </div>
                    <div class="form-group">
                        <label for="Password">Новый пароль</label>
                        <input type="password" class="form-control" id="OldPassword" name="OldPassword" style="display:none">
                        @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control", @name = "Password", @id = "Password", @placeholder = "Введите пароль" } })
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>
                    <div class="form-group">
                        <label for="PasswordRepeat">Повторите новый пароль</label>
                        @*<input type="password" class="form-control" id="PasswordRepeat" name="PasswordRepeat" placeholder="Введите пароль" data-val="true" data-val-required="Повторите пароль">*@
                        @Html.EditorFor(x => x.PasswordRepeat, new { htmlAttributes = new { @class = "form-control", @name = "PasswordRepeat", @id = "PasswordRepeat", @placeholder = "Повторите пароль" } })
                        @Html.ValidationMessageFor(model => model.PasswordRepeat)
                    </div>
                    <div class="modal-footer">
                        <a href="/Autorization/Index" type="button" class="btn btn-info" data-dismiss="modal">Отмена</a>
                        <button type="submit" class="btn btn-success" id="CheckUserBtn">Сменить пароль</button>
                    </div>
                </form>
            </div>
         </div>
    </div>
</body>